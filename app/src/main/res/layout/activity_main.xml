<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/applogo" />

    <TextView
        android:textSize="18dp"
        android:textColor="@color/suferm"
        android:text="Sign in"
        android:textStyle="bold"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="175dp"
        android:layout_width="150dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_marginTop="221dp"
        android:layout_marginLeft="42dp"
        android:layout_width="299dp"
        android:background="@drawable/white_border"
        android:layout_height="50dp" />

    <ImageView
        android:src="@drawable/ic_fullname"
        android:layout_marginTop="221dp"
        android:layout_width="50dp"
        android:alpha="0.8"
        android:background="@color/suferm"
        android:layout_marginLeft="42dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/Login_input_email"
        android:hint="Email/Phone"
        android:background="@drawable/userlayout"
        android:alpha="0.5"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/text"
        android:paddingTop="15dp"
        android:layout_marginTop="221dp"
        android:layout_width="250dp"
        android:inputType="textAutoCorrect"
        android:textSize="16dp"
        android:layout_marginLeft="90dp"
        android:layout_height="50dp"/>


    <RelativeLayout
        android:layout_marginLeft="42dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/white_border"
        android:layout_width="299dp"
        android:layout_height="50dp" />


    <ImageView
        android:src="@drawable/ic_password"
        android:layout_marginTop="285dp"
        android:layout_width="50dp"
        android:alpha="0.8"
        android:background="@color/suferm"
        android:layout_marginLeft="42dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/Login_input_password"
        android:hint="Password"
        android:inputType="numberPassword"
        android:layout_marginTop="285dp"
        android:background="@drawable/userlayout"
        android:alpha="0.5"
        android:layout_width="250dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:textSize="16dp"
        android:paddingTop="15dp"
        android:textColor="@color/text"
        android:layout_marginLeft="90dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="349dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/buttonstyle"
        android:text="Login"
        android:alpha="0.8"
        android:elevation="8dp"
        android:textColor="@color/layoutuser"
        android:textSize="15dp"
        android:onClick="OnLogin"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/tvForgot"
        android:text="Forgat your password?"
        android:textSize="12dp"
        android:textColor="@color/suferm"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="42dp"
        android:layout_width="wrap_content"
        android:layout_height="23dp" />
    <TextView
        android:text="Don't have an account?Sign up Now"
        android:textSize="12dp"
        android:id="@+id/btn_link_signup"
        android:textColor="@color/suferm"
        android:layout_marginTop="446dp"
        android:layout_marginLeft="42dp"
        android:layout_width="wrap_content"
        android:layout_height="23dp" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        android:layout_marginLeft="42dp"
        android:layout_alignParentLeft="true"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="470dp"
        android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/btn_revoke_access"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_revoke_access"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone">

    <ImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>