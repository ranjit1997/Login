<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filterpage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:elevation="5dp"
            android:background="@drawable/whiteborder"
            android:id="@+id/relLayout1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ic_magnify"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ic_magnify"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Filters"
                android:singleLine="true" />


        </RelativeLayout>

        <TextView
            android:textSize="14dp"
            android:textColor="@color/pink"
            android:layout_alignParentTop="true"
            android:layout_marginTop="95dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:text="Choose Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_marginTop="92dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/local_offer"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="124dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/hostel" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/sucity" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/rooms" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/drys" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="325dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/ic_dose" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="40dp"
                android:text="Hostels"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="40dp"
                android:text="Society"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="168dp"
                android:layout_marginTop="40dp"
                android:text="Rooms"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="244dp"
                android:layout_marginTop="40dp"
                android:text="Dry Cleaner"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="315dp"
                android:layout_marginTop="40dp"
                android:text="Anti Ragging"
                android:textColor="@color/black" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="222dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/price_rang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="14dp"
                android:text="Set a price range"
                android:textColor="@color/pink"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="65dp"
                android:hint="from"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="65dp"
                android:hint="to"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </RelativeLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="95dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/prfile"
            android:text="APPLY FILTERS"
            android:elevation="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</RelativeLayout>