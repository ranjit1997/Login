<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_Payments">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:elevation="10dp"
        android:background="@drawable/whiteborder"
        android:id="@+id/relLayout1">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ic_magnify"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_magnify"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Account and Payments"
            android:singleLine="true" />


    </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/page_layer"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_height="270dp">
            <TextView
                android:text="Account Management"
                android:textColor="@color/pink"
                android:textSize="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Change Password"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Share Phone Number"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_marginTop="160dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Show buyers your exact location "
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginTop="195dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:layout_marginTop="195dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="We will Show buyers your exact location in your ads. "
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="275dp"
        android:background="@drawable/page_layer"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="240dp">

        <TextView
            android:text="Payments and Orders"
            android:textColor="@color/pink"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvMyPay"
            android:text="My Payments"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvMyCho"
            android:text="My Choice"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Deactivate Account"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Logout"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</RelativeLayout>